                li= link_to "FIT2CLOUD 功能截屏", "/docs/#{@version}/overview/fit2cloud-snapshots.html"

                li.divider

                li.heading 快速入门(阿里云版)
                li= link_to "FIT2CLOUD 概念及术语", "/docs/#{@version}/quickstart/concepts-and-terminology.html"
                li= link_to "十分钟部署 Wordpress", "/docs/#{@version}/quickstart/wordpress-get-started.html"
                li= link_to "导入已有虚机", "/docs/#{@version}/quickstart/import-vms.html"
