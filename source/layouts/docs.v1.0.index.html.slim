                li= link_to "f2cadmin命令行工具", "https://github.com/hakobera/influga"

                li.divider

                li.heading 常见问题
                li= link_to "一般问题", "/docs/#{@version}/advanced_topics/sharding_and_storage.html"
                li= link_to "价格及计费", "/docs/#{@version}/advanced_topics/configuration_options.html"
                li= link_to "使用过程常见问题", "/docs/#{@version}/advanced_topics/schema_design.html"
                li= link_to "阿里云版常见问题", "/docs/#{@version}/advanced_topics/upgrading.html"

                li.divider

                li.heading SDK和工具
