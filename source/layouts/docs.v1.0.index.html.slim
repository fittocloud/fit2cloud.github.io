                li= link_to "执行脚本", "/docs/#{@version}/ui/built_in_admin_and_explorer.html"
                li= link_to "自动伸缩", "http://grafana.org/"
                li= link_to "设置安全组", "https://github.com/hakobera/influga"
                li= link_to "监控和告警", "https://github.com/hakobera/influga"
                li= link_to "关联阿里云RDS", "https://github.com/hakobera/influga"
                li= link_to "关联阿里云SLB", "https://github.com/hakobera/influga"
                li= link_to "使用自定义镜像", "https://github.com/hakobera/influga"
